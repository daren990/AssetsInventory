<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtFrequencyRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frequencyregion"
                android:textColor="@color/red" />

            <Spinner
                android:id="@+id/spinFrequencyRegion"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:entries="@array/frequencyregionvalue" />

            <Button
                android:id="@+id/btnFrequencyRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frequencyregionbtnvalue" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtFrequencyPinDian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frequencypindian"
                android:textColor="@color/red" />
            
            <EditText
                android:id="@+id/editFrequencyPinDian"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ems="10" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btnFrequencyPinDian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frequencypindianbtnvalue" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnFrequencyAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />

            <Button
                android:id="@+id/btnFrequencyMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />
        </TableRow>
    </LinearLayout>

</LinearLayout>